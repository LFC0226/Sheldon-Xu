    <script>
        // 预约弹窗功能
        const bookingModal = document.getElementById('bookingModal');
        
        function openBookingModal() {
            bookingModal.style.display = 'flex';
            document.body.style.overflow = 'hidden'; // 防止背景滚动
        }
        
        function closeBookingModal() {
            bookingModal.style.display = 'none';
            document.body.style.overflow = 'auto'; // 恢复背景滚动
        }
        
        // 点击弹窗外部关闭弹窗
        bookingModal.addEventListener('click', function(event) {
            if (event.target === bookingModal) {
                closeBookingModal();
            }
        });
        
        // ESC键关闭弹窗
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape' && bookingModal.style.display === 'flex') {
                closeBookingModal();
            }
        });
        
        // 添加卡片悬停效果增强
        document.querySelectorAll('.card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.zIndex = '10';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.zIndex = '1';
            });
        });
        
        // 添加iQOO风格扫描线效果
        const header = document.querySelector('.header');
        setInterval(() => {
            const scanline = document.createElement('div');
            scanline.style.position = 'absolute';
            scanline.style.top = Math.random() * 80 + 10 + '%';
            scanline.style.left = '0';
            scanline.style.width = '100%';
            scanline.style.height = '2px';
            scanline.style.background = 'linear-gradient(90deg, transparent, rgba(255, 106, 0, 0.9), rgba(255, 140, 0, 0.9), rgba(255, 106, 0, 0.9), transparent)';
            scanline.style.animation = 'iqoo-scan 1.5s linear';
            header.appendChild(scanline);
            
            setTimeout(() => {
                scanline.remove();
            }, 1500);
        }, 3000);
        
        // 添加角标动画
        document.querySelectorAll('.card-corner').forEach(corner => {
            corner.addEventListener('mouseenter', function() {
                this.style.borderColor = '#FF8C00';
                this.style.transform = 'scale(1.2)';
            });
            
            corner.addEventListener('mouseleave', function() {
                this.style.borderColor = '#FF6A00';
                this.style.transform = 'scale(1)';
            });
        });
    </script>
</body>
</html>
